{
  "workbench.colorTheme": "Kanagawa Dragon",
  "workbench.panel.showLabels": false,
  "workbench.preferredDarkColorTheme": "Kanagawa Dragon",
  "workbench.preferredLightColorTheme": "Kanagawa Dragon",
  "workbench.iconTheme": "Monokai Pro Icons",
  "workbench.startupEditor": "none",
  "workbench.tree.enableStickyScroll": false,
  "workbench.activityBar.location": "top",
  "workbench.colorCustomizations": {},
  "workbench.tips.enabled": false,
  "editor.minimap.enabled": false,
  "editor.stickyScroll.scrollWithEditor": false,
  "editor.stickyScroll.enabled": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "expand",
  "editor.fontLigatures": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.smoothScrolling": true,
  "git.autofetch": true,

  "editor.fontFamily": "D2CodingLigature Nerd Font, JetBrainsMono Nerd Font, JetBrains Mono, Menlo, Monaco, 'Courier New', monospace",
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },

  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true, // 저장 시 자동 포맷팅
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "window.autoDetectColorScheme": true,
  "gitProjectManager.baseProjectsFolders": ["$HOME/dev"],
  "typescript.updateImportsOnFileMove.enabled": "always",
  "accessibility.dimUnfocused.opacity": 0.5,

  "postman.settings.dotenv-detection-notification-visibility": false,
  "workbench.productIconTheme": "material-product-icons",
  "chat.commandCenter.enabled": false,
  "workbench.list.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "editor.codeLensFontFamily": "D2CodingLigature Nerd Font",
  "editor.inlayHints.fontFamily": "D2CodingLigature Nerd Font",
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.fontFamily": "D2CodingLigature Nerd Font",
  "projectManager.git.baseFolders": ["~/dev"]
}
